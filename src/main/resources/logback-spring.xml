<configuration>

    <!-- Console Appender: For live logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- MongoDB Appender -->
    <appender name="MONGO" class="com.thinkforge.quiz_service.log.MongoDBLogAppender">
        <uri>mongodb+srv://admin:admin@logs.yzbipfo.mongodb.net/?retryWrites=true&amp;w=majority&amp;appName=Logs</uri>
        <databaseName>allLogs</databaseName>
        <collectionName>quizServiceLogsGeneral</collectionName>
    </appender>

    <!-- Log only MongoDB driver logs here specifically (optional if covered by root) -->
    <logger name="org.mongodb.driver" level="INFO" additivity="true">
        <appender-ref ref="MONGO"/>
    </logger>

    <!-- Log everything (Spring Boot, web, services, etc.) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MONGO"/>
    </root>

</configuration>
